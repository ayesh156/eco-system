{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && cd .. && npm install && cp -r backend/prisma . && npx prisma generate && echo 'Build v2026-02-03-v3-sections'",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/api/v1/shops/([^/]+)/sections",
      "dest": "/api/v1/shops/[shopId]/sections.ts?shopId=$1"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/((?!api).*)",
      "dest": "/index.html"
    }
  ]
}
