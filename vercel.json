{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && cd .. && npm install && cp -r backend/prisma . && npx prisma generate",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.ts"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/index.html"
    }
  ]
}
